@html.extend('Shared/_layout', function(model){

    @html.block('content', function(model){

        @{
            model.title = "Register";
        }
        
        <div class="row">
            <div class="col-sm-5 bg-info text-light" style="margin: 100px auto 100px;border-radius: 5px;">
                <form class="form" method="POST" action="/api/Account/register" style="padding: 3vh;">
                    <h3>Register</h3>
                    <div class="form-group">
                        @html.LabelFor(model.username)
                        @html.TextBoxFor(model.username, { class: "form-control", autocomplete: "username"})
                        @html.ValidationMessageFor(model.username, model.valErr.username)
                    </div>
                    <div class="form-group">
                        @html.LabelFor(model.password)
                        @html.PasswordBoxFor(model.password, { class: "form-control", autocomplete: "off"})
                        @html.ValidationMessageFor(model.password, model.valErr.password)
                    </div>
                    <div class="form-group">
                        @html.LabelFor(model.passwordConfirmation)
                        @html.PasswordBoxFor(model.passwordConfirmation, { class: "form-control", autocomplete: "off"})
                        @html.ValidationMessageFor(model.passwordConfirmation, model.valErr.passwordConfirmation)
                    </div>
                    <div>
                        <input class="btn btn-info" type="submit" value="Register"> 
                    </div>
                </form>
            </div>
        </div>
    })
})